<% @homes.each do |home| %>

    <section class="home">
      <h1><%= home.title %></h1>

      <hr/>

      <%= render :partial => 'layouts/social', :locals => {:url => homes_path, :share_text => "Um site sobre todos os bares de UberlÃ¢ndia! Que legal!"} %>

      <%= image_tag home.main_image.url(:medium), :class => "main" %>

      <hr/>

      <div class="gallery" style="padding-left:460px">
        <%= image_tag home.gallery_image.url(:thumb)%>
        <h4>Fotos</h4>
      </div>

      <div class="gallery">
        <%= image_tag home.events_image.url(:thumb)%>
        <h4>Eventos</h4>
      </div>

      <hr/>

      <h4>Bares em Destaque</h4>
      <% @general_informations.each_with_index do |destaque, index| %>

          <% if index <= 7 %>
              <div class="home-destaques">
                <%= image_tag destaque.main_image.url(:thumb) %>
                <h5><%= destaque.name %></h5>
              </div>
          <% else %>
              <% break %>
          <% end %>

      <% end %>

      <hr/>

    </section>

<% end %>